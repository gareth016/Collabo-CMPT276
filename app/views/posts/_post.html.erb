<%= div_for post do %> 
	<div class="large-12 columns border border-box glassy-bg mt pt">
		<strong><%= h(post.user) %></strong><br /> 
		<sup class="text-muted">From <%= time_ago_in_words(post.created_at)%></sup><br />
		<div class="mb pb">
			<%= h(post.post) %>
		</div>
		<div class="tags">
			<%=raw tag_links(post.all_tags) %> 
		</div>
	</div>
<% end %>